.widget.list .content a > div.name 
  font-weight: initial; 

// 背景色补充
#doodle-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -100;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}
#doodle-bg::after {
  content: "";
  position: absolute;
  top: -100%;
  left: -100%;
  right: -100%;
  bottom: -100%;
  backdrop-filter: blur(100px);
  z-index: 1;
}

// 首屏灰色
html.grayscale::before {
  content: "";
  position: absolute;
  inset: 0;
  backdrop-filter: grayscale(95%);
  z-index: 10;
  pointer-events: none;
}